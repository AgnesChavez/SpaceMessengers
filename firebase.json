{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site":"space-messengers",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers":[{
      "source": "**/*.html",
      "headers":[{
        "key": "Cache-Control",
        "value": "max-age=0, no-cache"
      }]
    },{
      "source": "**/*.@(jpg|jpeg|gif|png|webp)",
      "headers":[{
        "key": "Cache-Control",
        "value": "max-age=3300,"
      }]
    },{
      "source": "**/*.@(css|js)",
      "headers":[{
        "key": "Cache-Control",
        "value": "max-age=3500,"
      }]
    }
  ],
    "rewrites": [
      {
        "source": "/sms",
        "function": "app"
      },
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/private_api/**",
        "function": "app"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/completeRegistration",
        "destination": "/index.html"
      },
      {
        "source": "/chat",
        "destination": "/index.html"
      },
      {
        "source": "/board",
        "destination": "/index.html"
      },
      {
        "source": "/profile",
        "destination": "/index.html"
      },
      {
        "source": "/gallery",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/realtimechat",
        "destination": "/index.html"
      }
      
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": false
    }
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  }
}
